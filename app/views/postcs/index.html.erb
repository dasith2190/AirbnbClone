<%- model_class = Postc -%>
<div class="page-header">
  <h1><%=t '.title', :default => 'My Listings' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>

      <th><%= model_class.human_attribute_name(:post_title) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th><%= model_class.human_attribute_name(:zip) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:home_type) %></th>
      <th><%= model_class.human_attribute_name(:rooms) %></th>
      <th><%= model_class.human_attribute_name(:baths) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:price_type) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @postcs.each do |postc| %>
      <tr>
        <td><%= postc.post_title %></td>
        <td><%= postc.address %></td>
        <td><%= postc.country %></td>
        <td><%= postc.zip %></td>
        <td><%= postc.city %></td>
        <td><%= postc.home_type %></td>
        <td><%= postc.rooms %></td>
        <td><%= postc.baths %></td>
        <td><%= postc.price %></td>
        <td><%= postc.price_type %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_postc_path(postc), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      postc_path(postc),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_postc_path,
            :class => 'btn btn-primary' %>
